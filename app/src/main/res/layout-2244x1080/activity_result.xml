<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heartratedect.Activity.ResultActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/wave"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="#3399FF" >

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/wave" />

        <RelativeLayout
            android:id="@+id/heartdate"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_below="@id/line1"
            android:background="#FFFFFF">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/heart" />

                <TextView
                    android:id="@+id/heartRateValueLabel"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:text="70"
                    android:textColor="#000"
                    android:textSize="70dp" />

                <TextView
                    android:id="@+id/unitLabel"

                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center"
                    android:text="次/分"
                    android:textColor="#000000"
                    android:textSize="25dp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/heartdate"
            />

        <RelativeLayout
            android:id="@+id/SpO2"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:layout_below="@id/line2">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:background="@drawable/spo2"/>
                <TextView
                    android:id="@+id/valueofSpO2"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:text="98"
                    android:textColor="#000"
                    android:textSize="70dp" />

                <TextView
                    android:id="@+id/unitLabe2"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="#000000"
                    android:textSize="30dp" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/SpO2"
            />

        <RelativeLayout
            android:id="@+id/check_box_sport"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_below="@id/line3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="请选择你的状态"/>
                <RadioGroup
                    android:id="@+id/rgSex"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/rbMan"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/rbMan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="运动"
                        />
                    <RadioButton
                        android:id="@+id/rbMadal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="静止"/>
                </RadioGroup>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/line5"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/check_box_sport"
            />

        <RelativeLayout
            android:id="@+id/check_box_eat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_below="@id/line5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="是否餐后半小时测量"/>
                <RadioGroup
                    android:id="@+id/iseat"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/rbMan"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/eat_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="是"
                        />
                    <RadioButton
                        android:id="@+id/eat_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="否"/>
                </RadioGroup>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/line6"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/check_box_eat"
            />

        <RelativeLayout
            android:id="@+id/check_box_sleep"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_below="@id/line6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="是否醒后半小时测量"/>
                <RadioGroup
                    android:id="@+id/issleep"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/rbMan"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/sleep_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="是"
                        />
                    <RadioButton
                        android:id="@+id/sleep_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="否"/>
                </RadioGroup>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/check_box_sleep"
            />
        <LinearLayout
            android:id="@+id/remarkLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/line4">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="输入备注："
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editsharp"
                android:drawableLeft="@drawable/edit"
                android:gravity="center"
                android:hint="请填写备注"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/line7"
                android:background="#FFFFFF">


                <Button
                    android:id="@+id/resolve"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_nor_down"
                    android:gravity="center"
                    android:text="保存"
                    android:textSize="25dp" />


            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/line7"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/remarkLinear"
            />

    </RelativeLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>