<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heartratedect.Activity.ResultActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/resultwave"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="#15b5e9" >
            <TextView
                android:id="@+id/resultwave1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="89dp"
                android:text="波形"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/resultwave" />

        <RelativeLayout
            android:id="@+id/resultheartdate"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#FFFF"
            android:layout_below="@id/line1">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resultHeartRateShow"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:text="70"
                    android:textColor="#000"
                    android:textSize="90dp" />

                <TextView
                    android:id="@+id/resultshow"

                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center"
                    android:text="次/秒"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/resultheartdate" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/line2">
            <TextView
                android:id="@+id/resulttext1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal|bottom"
                android:text="您的心率属于健康水平"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/resulttext2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:text="根据大数据分析得，您的心率属于健康水平，请注意保持，并坚持量测"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
