<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/regist_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/background_login_div_bg"
        android:padding="15dp" >

        <TextView
            android:id="@+id/tv_regist_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="心动注册"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_regist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_regist_title"
            android:layout_marginTop="20dp"
            android:text="帐号"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_regist_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_regist_name"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_style"
            android:hint="请输入昵称"
            android:inputType="text"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_regist_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_regist_name"
            android:layout_marginTop="10dp"
            android:text="密码"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_regist_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_regist_password"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_style"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true" />

        <ImageView 
            android:id="@+id/img_regist_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/et_regist_password"
            android:layout_marginTop="30dp"
            android:src="@drawable/backlogin"/>
        <TextView 
            android:id="@+id/tv_regist_backlogin"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_regist_password"
            android:layout_toRightOf="@+id/img_regist_back"
            android:layout_marginTop="30dp"
            android:text="返回登录"/>
        <Button
            android:id="@+id/btn_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
			android:layout_below="@+id/et_regist_password"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_style"
            android:text="注册" />
    </RelativeLayout>

</LinearLayout>