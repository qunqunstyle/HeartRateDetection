<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#15b5e9" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/title_bar" />

    <RelativeLayout
        android:id="@+id/infoRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/line1"
        android:background="#FFFFFF"
        android:clickable="true"
        android:onClick="onClick" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/iv_head"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Current User"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_head"
            android:paddingLeft="10dp"
            android:text="查看个人主页"
            android:textColor="#CCCCCC"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/infoRelativeLayout" />

    <RelativeLayout
        android:id="@+id/RealtiveLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line2"
        android:background="#FFFFFF"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="心率历史记录"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/RealtiveLayout1" />

    <RelativeLayout
        android:id="@+id/RealtiveLayout2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line3"
        android:background="#FFFFFF"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="修改个人信息"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/RealtiveLayout2" />

    <RelativeLayout
        android:id="@+id/RealtiveLayout3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line4"
        android:background="#FFFFFF"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="我要吐槽"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <View
        android:id="@+id/line5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/RealtiveLayout3" />

    <RelativeLayout
        android:id="@+id/RealtiveLayout4"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line5"
        android:background="#FFFFFF"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="关于我们"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnLoginout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="#EE2C2C"
        android:text="退出帐号" />

</RelativeLayout>